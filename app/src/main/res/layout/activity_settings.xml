<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_grey"
    tools:context=".activities.SettingsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_product_desc"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_gravity="top"
        android:background="@color/color_white">

        <com.finalyearproject.shoppingvilleapp.utills.MSVTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Settings"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back" />
    </androidx.appcompat.widget.Toolbar>

    <com.finalyearproject.shoppingvilleapp.utills.MSVTextView
        android:id="@+id/btn_account_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorSecondaryText"
        android:clickable="true"
        android:background="@color/color_white"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:focusable="true"
        android:drawableEnd="@drawable/ic_angle_forward"
        android:padding="20dp"
        android:text="Account Details"
        android:textSize="18sp" />

    <com.finalyearproject.shoppingvilleapp.utills.MSVTextView
        android:id="@+id/btn_address_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:textColor="@color/colorSecondaryText"
        android:background="@color/color_white"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:drawableEnd="@drawable/ic_angle_forward"
        android:padding="20dp"
        android:text="Address Book"
        android:textSize="18sp" />

    <com.finalyearproject.shoppingvilleapp.utills.MSVTextView
        android:id="@+id/btn_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:textColor="@color/colorSecondaryText"
        android:background="@color/color_white"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:drawableEnd="@drawable/ic_angle_forward"
        android:padding="20dp"
        android:text="Messages"
        android:textSize="18sp" />

    <com.finalyearproject.shoppingvilleapp.utills.MSVTextView
        android:id="@+id/btn_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/color_white"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:drawableEnd="@drawable/ic_angle_forward"
        android:padding="20dp"
        android:text="General"
        android:textColor="@color/colorSecondaryText"
        android:textSize="18sp" />

    <com.finalyearproject.shoppingvilleapp.utills.MSVTextView
        android:id="@+id/btn_policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/color_white"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:drawableEnd="@drawable/ic_angle_forward"
        android:padding="20dp"
        android:text="Privacy Poliies"
        android:textColor="@color/colorSecondaryText"
        android:textSize="18sp" />

    <com.finalyearproject.shoppingvilleapp.utills.MSVTextView
        android:id="@+id/btn_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/color_white"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:drawableEnd="@drawable/ic_angle_forward"
        android:padding="20dp"
        android:text="Help"
        android:textColor="@color/colorSecondaryText"
        android:textSize="18sp" />

    <com.finalyearproject.shoppingvilleapp.utills.MSVButton
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="25dp"
        android:background="@color/color_white"
        android:text="Logout"
        android:textColor="@color/actionColor" />

</LinearLayout>